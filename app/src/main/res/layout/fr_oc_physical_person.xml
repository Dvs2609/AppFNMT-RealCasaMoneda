                            app:drawableLeftCompat="@drawable/dot_svg"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_dropdown2_txtlist2"/>


                        <RelativeLayout
