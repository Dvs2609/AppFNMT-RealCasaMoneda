<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ObtenerCertificado">

    <RelativeLayout
        android:id="@+id/gridGetCertificates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp">

        <TextView
            android:id="@+id/oc_init_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oc_pp_step3"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/oc_init2_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/oc_pp_step3_title"
            android:textColor="@color/black"
            android:layout_below="@+id/oc_init_txt"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/prove_identity_step_backCross"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/cross_svg"
            app:tint="@color/icon_arrow_svg" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oc_init2_txt"
            android:text="@string/oc_pp_step3_nav"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/oc_Step3_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:textColor="#6A6A6A"
            android:lineSpacingExtra="4dp"
            android:layout_below="@+id/txt"
            android:textSize="12sp"
            android:text="@string/oc_pp_step2_notice"/>

        <TextView
            android:id="@+id/oc_Step3_textDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/black"
            android:layout_below="@+id/oc_Step3_notice"
            android:textSize="14sp"
            android:text="@string/oc_pp_step3_text"/>

        <RelativeLayout
            android:id="@+id/step3_goTo1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/oc_Step3_textDesc"
            android:background="@drawable/shape_corners_relative_layout">

            <TextView
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/icons_svg"
                android:text="@string/oc_pp_step3_go_to_more_info"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/PI_go_to_more_info"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_arrow_svg"
                app:tint="@color/icon_arrow_svg" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/step3_goTo2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/step3_goTo1"
            android:background="@drawable/shape_corners_relative_layout">

            <TextView
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/icons_svg"
                android:text="@string/oc_pp_step3_go_to_qst_request_certf"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/PI_go_to_Qst1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/right_arrow_svg"
                app:tint="@color/icon_arrow_svg" />
        </RelativeLayout>

        <TextView
            android:id="@+id/step3_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:textColor="#6A6A6A"
            android:lineSpacingExtra="4dp"
            android:layout_below="@+id/step3_goTo2"
            android:textSize="12sp"
            android:text="@string/oc_pp_step3_note"/>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:layout_below="@+id/step3_note"
            android:columnCount="1"
            android:rowCount="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardtxt_step3_Documentation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#EFEFF0"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="270dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/icons_svg"
                            android:text="@string/oc_pp_step3_dropdown1_title"
                            app:tint="@color/icons_svg"/>

                        <ImageView
                            android:id="@+id/step3_icon_dropdown1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="13dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/right_arrow_svg"
                            app:tint="@color/icon_arrow_svg" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/RL_step3_Dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/txt_step3_desc_Dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown1_text1"/>

                        <TextView
                            android:id="@+id/txt_step3_title1_Dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold"
                            android:layout_below="@+id/txt_step3_desc_Dropdown"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown1_titlelist1"/>

                        <TextView
                            android:id="@+id/txt_step3_t1_text1_Dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"
                            android:drawablePadding="10dp"
                            app:drawableLeftCompat="@drawable/dot_svg"
                            android:layout_below="@+id/txt_step3_title1_Dropdown"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown1_list1"/>

                        <TextView
                            android:id="@+id/txt_step3_t1_text2_Dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"
                            android:drawablePadding="10dp"
                            app:drawableLeftCompat="@drawable/dot_svg"
                            android:layout_below="@+id/txt_step3_t1_text1_Dropdown"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown1_list2"/>

                        <TextView
                            android:id="@+id/txt_step3_title2_Dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold"
                            android:layout_below="@+id/txt_step3_t1_text2_Dropdown"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown1_titlelist2"/>

                        <TextView
                            android:id="@+id/txt_step3_t2_text1_Dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"
                            android:drawablePadding="10dp"
                            app:drawableLeftCompat="@drawable/dot_svg"
                            android:layout_below="@+id/txt_step3_title2_Dropdown"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown1_list3"/>

                        <TextView
                            android:id="@+id/txt_step3_t2_text2_Dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"
                            android:drawablePadding="10dp"
                            app:drawableLeftCompat="@drawable/dot_svg"
                            android:layout_below="@+id/txt_step3_t2_text1_Dropdown"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown1_list4"/>

                        <TextView
                            android:id="@+id/txt_step3_t2_text3_Dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"
                            android:drawablePadding="10dp"
                            app:drawableLeftCompat="@drawable/dot_svg"
                            android:layout_below="@+id/txt_step3_t2_text2_Dropdown"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown1_list5"/>

                        <TextView
                            android:id="@+id/txt_step3_t2_text4_Dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"
                            android:drawablePadding="10dp"
                            app:drawableLeftCompat="@drawable/dot_svg"
                            android:layout_below="@+id/txt_step3_t2_text3_Dropdown"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown1_list6"/>

                        <TextView
                            android:id="@+id/txt_step3_title3_Dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:textStyle="bold"
                            android:layout_below="@+id/txt_step3_t2_text4_Dropdown"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown1_ltitleist3"/>

                        <TextView
                            android:id="@+id/txt_step3_t3_text1_Dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"
                            android:drawablePadding="10dp"
                            app:drawableLeftCompat="@drawable/dot_svg"
                            android:layout_below="@+id/txt_step3_title3_Dropdown"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown1_list7"/>
                        <TextView
                            android:id="@+id/txt_step3_t3_text2_Dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"
                            android:drawablePadding="10dp"
                            app:drawableLeftCompat="@drawable/dot_svg"
                            android:layout_below="@+id/txt_step3_t3_text1_Dropdown"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown1_list8"/>
                        <TextView
                            android:id="@+id/txt_step3_t3_text3_Dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black"
                            android:drawablePadding="10dp"
                            app:drawableLeftCompat="@drawable/dot_svg"
                            android:layout_below="@+id/txt_step3_t3_text2_Dropdown"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown1_list9"/>
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardtxt_step3_WhereToAccredit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginBottom="80dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#EFEFF0"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="270dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/icons_svg"
                            android:text="@string/oc_pp_step3_dropdown2_title"
                            app:tint="@color/icons_svg"/>

                        <ImageView
                            android:id="@+id/step3_icon_dropdown2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="13dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/right_arrow_svg"
                            app:tint="@color/icon_arrow_svg" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/RL_step3_Dropdown2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/step3_Dropdown2_note1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="25dp"
                            android:textColor="@color/black"
                            android:lineSpacingExtra="4dp"
                            android:textSize="12sp"
                            android:text="@string/oc_pp_step3_dropdown2_note1"/>

                        <TextView
                            android:id="@+id/txt_step3_text1_Dropdown2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_below="@+id/step3_Dropdown2_note1"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown2_text1"/>

                        <RelativeLayout
                            android:id="@+id/rectangularLY_Dropdown2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_step3_text1_Dropdown2"
                            android:background="@drawable/rectangular_shape"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="30dp"
                                android:backgroundTint="#EFEFF0"
                                android:textColor="@color/icons_svg"
                                android:layout_marginStart="5dp"
                                android:textAlignment="viewStart"
                                android:textAllCaps="false"
                                android:layout_marginTop="7dp"
                                android:textSize="14sp"
                                android:text="@string/oc_pp_step3_dropdown2_go_to_localizer"
                                tools:ignore="RtlCompat" />

                            <ImageView
                                android:id="@+id/iconPIGoToLocalizer"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="13dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/right_arrow_svg"
                                app:tint="@color/icon_arrow_svg" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/step3_Dropdown2_note2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="25dp"
                            android:textColor="@color/black"
                            android:layout_below="@+id/rectangularLY_Dropdown2"
                            android:lineSpacingExtra="4dp"
                            android:textSize="12sp"
                            android:text="@string/oc_pp_step3_dropdown2_note2"/>

                        <RelativeLayout
                            android:id="@+id/rectangularLY_3_Dropdown2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/step3_Dropdown2_note2"
                            android:background="@drawable/rectangular_shape"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="35dp"
                                android:backgroundTint="#EFEFF0"
                                android:textColor="@color/icons_svg"
                                android:layout_marginStart="13dp"
                                android:textAlignment="viewStart"
                                android:textAllCaps="false"
                                android:layout_marginTop="0dp"
                                android:textSize="14sp"
                                android:text="Oficinas de Acreditación de la Seguridad Social"
                                tools:ignore="RtlCompat" />

                            <ImageView
                                android:id="@+id/iconStep3GoToAcreditOffices"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/right_arrow_svg"
                                app:tint="@color/icon_arrow_svg" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txt_step3_text3_Dropdown2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_below="@+id/rectangularLY_3_Dropdown2"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="@string/oc_pp_step3_dropdown2_text2"/>

                        <RelativeLayout
                            android:id="@+id/rectangularLY_2_Dropdown2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_step3_text3_Dropdown2"
                            android:background="@drawable/rectangular_shape"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="35dp"
                                android:backgroundTint="#EFEFF0"
                                android:textColor="@color/icons_svg"
                                android:layout_marginStart="13dp"
                                android:textAlignment="viewStart"
                                android:textAllCaps="false"
                                android:layout_marginTop="0dp"
                                android:textSize="14sp"
                                android:text="@string/oc_pp_step3_dropdown2_go_to_consular_offices"
                                tools:ignore="RtlCompat" />

                            <ImageView
                                android:id="@+id/iconStep3GoToOffices"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:src="@drawable/right_arrow_svg"
                                app:tint="@color/icon_arrow_svg" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>
    </RelativeLayout>


</ScrollView>