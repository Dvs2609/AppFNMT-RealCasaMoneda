<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollviewPhysicalPerson"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RepresentativeCertificates.RC_Single_Administrator">

    <RelativeLayout
        android:id="@+id/gridGetCertificates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp">

    <TextView
        android:id="@+id/oc_init_txt"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="@string/oc_repre_unq_admin_title"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/oc_repre_single_admin_back_cross"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/cross_svg"
        app:tint="@color/icon_arrow_svg" />

    <TextView
        android:id="@+id/uniqAdminNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oc_init_txt"
        android:text="@string/oc_repre_uniq_admin_nav"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/RLselectStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/uniqAdminNav"
        android:orientation="horizontal">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/oc_pp_title_steps"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iconHelp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/txtHelp"
            android:layout_marginTop="4dp"
            android:src="@drawable/icon_question_svg"
            app:tint="@color/icons_svg" />

        <TextView
            android:id="@+id/txtHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="@string/helptxt_ObtainCertificates_fr"
            android:textColor="@color/icons_svg"
            android:textSize="14sp" />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/PhysicalPerson_StepsGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RLselectStep"
        android:columnCount="1"
        android:rowCount="5">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_rowWeight="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#EFEFF0"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="@color/icons_svg"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:text="@string/oc_pp_step1_title"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/GoToStep1SA"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/right_arrow_svg"
                    app:tint="@color/icon_arrow_svg" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_rowWeight="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#EFEFF0"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textStyle="bold"
                    android:textColor="@color/icons_svg"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:text="@string/oc_pp_step2_title"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/GoToStep2SA"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/right_arrow_svg"
                    app:tint="@color/icon_arrow_svg" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_rowWeight="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#EFEFF0"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textStyle="bold"
                    android:textColor="@color/icons_svg"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:text="@string/oc_pp_step4_title"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/GoToStep3SA"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/right_arrow_svg"
                    app:tint="@color/icon_arrow_svg" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="45dp"
            app:cardBackgroundColor="#EFEFF0"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/icons_svg"
                        android:text="@string/oc_repre_unq_admin_dropdown1_title"
                        app:tint="@color/icons_svg"/>

                    <ImageView
                        android:id="@+id/iconSADropdown"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="6dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/right_arrow_svg"
                        app:tint="@color/icon_arrow_svg" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/RLSAdropdown1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/rc_sa_txtDropdown1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="@string/oc_repre_unq_admin_dropdown1_text"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_below="@+id/rc_sa_txtDropdown1"
                        android:background="@drawable/rectangular_shape"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="280dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:backgroundTint="#EFEFF0"
                            android:text="@string/oc_repre_unq_admin_dropdown1_go_to_help"
                            android:textAlignment="viewStart"
                            android:textAllCaps="false"
                            android:textColor="@color/icons_svg"
                            android:textSize="14sp"
                            tools:ignore="RtlCompat" />

                        <ImageView
                            android:id="@+id/iconRepresentateGoToHelpRepre"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="50dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/right_arrow_svg"
                            app:tint="@color/icon_arrow_svg" />

                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardtxtQst2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_rowWeight="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#EFEFF0"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/icons_svg"
                        android:text="@string/oc_repre_unq_admin_dropdown2_title"
                        app:tint="@color/icons_svg"/>

                    <ImageView
                        android:id="@+id/iconSADropdown2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="6dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/right_arrow_svg"
                        app:tint="@color/icon_arrow_svg" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/RLSAdropdown2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/rc_sa_txtDropdown2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="@string/oc_repre_unq_admin_dropdown2_text"/>

                </RelativeLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>
    </RelativeLayout>

</ScrollView>